<Window x:Class="magazyn_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:magazyn_projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="16" Name="menu1" Width="800" HorizontalAlignment="Left" VerticalAlignment="Top" Background="LightGray">
            <MenuItem Header="Users" Click="MenuItem_Click">
                <MenuItem Header="Add" Name="addUserButton" Click="addUserButtonClick"/>
                <MenuItem Header="Delete" Name="deleteUserButton" Click="deleteUserButtonClick"/>
                <MenuItem Header="Set Permissions" Name="setPermissionButton" Click="setPermissionButtonClick"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
